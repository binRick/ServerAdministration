html5(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    -o-{prop} args
    {prop} args

@font-face
    font-family Montserrat-Regular
    font-weight: 400;
    src url('/stylesheets/Montserrat-Regular.ttf')

@font-face
    font-family Montserrat-Bold
    font-weight: 700;
    src url('/stylesheets/Montserrat-Bold.ttf')

@font-face
    font-family Montserrat-RegularWoff
    font-weight: 400;
    src url('/stylesheets/Montserrat-Regular.woff')

@font-face
    font-family Montserrat-BoldWoff
    font-weight: 700;
    src url('/stylesheets/Montserrat-Bold.woff')

